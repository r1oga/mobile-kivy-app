<LoginScreen>
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>
    GridLayout:
        cols: 1
        Label:
            text: "Sign up"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(**{k: v.text for k, v in root.ids.items()})

<SignUpScreenSuccess>
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up Successful"
        Button:
            text: "Login page"
            on_press: root.redirect_to_login()

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
