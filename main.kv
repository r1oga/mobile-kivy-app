<LoginScreen>
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login()
            Label:
                id: login_error_message
                text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>
    GridLayout:
        cols: 1
        Button:
            text: "Back"
            on_press: root.redirect_to_login()
        Label:
            text: "Sign up"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user()

<SignUpScreenSuccess>
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up Successful"
        Button:
            text: "Login page"
            on_press: root.redirect_to_login()

<CustomDropDown>:
    Button:
        text: 'Sad'
        size_hint_y: None
        height: 44
        on_release: root.select('sad')
    Button:
        text: 'Happy'
        size_hint_y: None
        height: 44
        on_release: root.select('happy')
    Button:
        text: 'Unloved'
        size_hint_y: None
        height: 44
        on_release: root.select('unloved')

<LoginScreenSuccess>
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        GridLayout:
            cols:  1
            width: 200
            CustomDropDown
        Button:
            text: "Enlighten me"
            on_press: root.get_quote()
        Label:
            id: quote
            text: ""



<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
